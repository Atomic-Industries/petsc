%
%	macro for address
%
\newcommand{\theaddress}[1]{
  \parskip=4pt
  \parindent=0pt
  \begin{center}
      {\Large \bf ARGONNE NATIONAL LABORATORY}
  \end{center}
  \footnotetext{
     \centerline{\psfig{file=argonne.ps,height=1in}}
     \vspace{-.8in}
     \begin{center}
        {\large \sf U.S. Department of Energy \hskip1.2in \sf 
        The University of Chicago} 
     \end{center}
  }
  {\obeylines 
    Mathematics and Computer Science Division 
     \hfill Telephone: (708) 252-\extension \\
    9700 South Cass Avenue, Argonne, Illinois 60439-4844 \hfill
    Faxphone: (708) 252-5986 \\
    \hbox{ } \hfill Email: \ename@mcs.anl.gov \\
    \vskip .2in
    \hbox{ } \hfill \today 
  }

  \medskip
  \parindent=.0in
  \parskip=8pt
  {\obeylines 
      #1
      \vskip.3in
  }
  \parindent=.4in
}
%
%	macro for opening
%
\newcommand{\theopening}[1]{
  {\obeylines \parindent=0in \parskip=0pt
     #1
  } 
  \medskip
}
%
%	macro for closing
%
\newcommand{\theclosing}[1]{
   \vskip.3in
   {\parindent=3.5in
      \parskip=0pt
      Sincerely,
      \vskip 0.75in
      #1 
   } 
   \vspace{.3in}
}
%
\newcommand{\thecc}[1]{
   \vskip .5in
   \parindent=.0in
   CC: #1
}
