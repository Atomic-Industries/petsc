#! /bin/ksh -f
# $Id: popup,v 1.1 2000/04/20 04:19:08 bsmith Exp bsmith $ 
#
#   popup
#
#   This is used by the PETSc routine PetscPopUpSelect()
# 
echo $1
shift
select x
do
#
#  check if reply is greater than 0 and less than number of choices + 1
#
  if [ $REPLY > 0 ] ; then
    echo $REPLY > ~/.popuptmp
    exit
  fi
done

