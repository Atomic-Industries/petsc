#! /bin/sh
# $Id: petscrun,v 1.1 2000/10/26 15:51:30 bsmith Exp bsmith $ 
#
# Remote shells to a remote machine and runs a program
#
np=$1
shift
machine=$1
shift
arch=$1
shift
pdir=$1
shift
dir=$1
shift
echo "petscmpirun -np $np $*"
rsh $machine "cd $pdir/$dir ; setenv BOPT g; setenv PETSC_DIR $pdir ; setenv PETSC_ARCH $arch; petscmpirun -np $np $*"

