#! /bin/sh
# $Id: petscrsh,v 1.1 2000/10/06 18:58:40 bsmith Exp bsmith $ 
#
# Remote shells to a machine and runs make to compile the program
#
machine=$1
shift
arch=$1
shift
pdir=$1
shift
dir=$1
shift
echo "make $*"
rsh $machine "cd $pdir/$dir ; setenv BOPT g; setenv PETSC_DIR $pdir ; setenv PETSC_ARCH $arch; make $*"

