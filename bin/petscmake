#! /bin/sh
# $Id: rmake,v 1.1 2000/10/06 18:40:20 bsmith Exp bsmith $ 
#
# Remote shells to a remote machine and runs rmake.out on that machine 
# to compile the program
#
command=$1
shift
machine=$1
shift
arch=$1
shift
pdir=$1
shift
dir=$1
shift
rsh $machine "cd $pdir/$dir ; setenv BOPT g; setenv PETSC_DIR $pdir ; setenv PETSC_ARCH $arch; $command $*"

