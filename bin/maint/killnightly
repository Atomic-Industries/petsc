#! /bin/csh
#
#  usage: startnightly tname1[:branch1] tname2[:branch2] ...
#
#  tname1 is the name of a file in $PETSC_DIR/bin/maint/configurenightly that defines
#  a machine on which a job started with startnightly/builddist should be killed.
#
set dir=`dirname $0`

foreach TEST ($*)
  source $dir/confignightly/default
  source $dir/confignightly/${TNAME}

  $SSH $USR@$MACH $DASHN "$PETSC_DIR/bin/maint/zapall" &
  sleep 10 # If 2 invocations on the same machine - they stomp in each other
end
wait

