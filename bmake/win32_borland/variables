# $Id: base_variables,v 1.2 2001/03/09 21:02:02 balay Exp $ 
#
#     See the file bmake/base_variables.defs for a complete explanation of all these fields
#
WIN32FE            = ${PETSC_DIR}/bin/win32fe/win32fe.exe
AR		   = ${WIN32FE} tlib -C -P128 --quiet
AR_FLAGS	   = -u
LIB_SUFFIX         = lib
RM		   = rm -f
OMAKE		   = make --no-print-directory
RANLIB		   = true
SHELL		   = /bin/sh
SED		   = sed
MKDIR              = mkdir -p
# ######################### C and Fortran compiler ########################
#
C_CC		   = ${WIN32FE} bcc32 -q --quiet -w-8019 -w-8060 -w-8057
C_FC		   = ${WIN32FE} bcf77 --quiet
C_CLINKER_SLFLAG   = -L
C_FLINKER_SLFLAG   = -L
C_CLINKER	   = ${WIN32FE} bcc32 --quiet
C_FLINKER	   = ${WIN32FE} bcf77 --quiet
C_CCV		   = bcc32 | head -1
C_FCV              = bcf77
C_SYS_LIB	   = 
# ------------------------- BOPT - g_c++ options ------------------------------
G_COPTFLAGS	   = -v
G_FOPTFLAGS	   =
# ----------------------------- BOPT - O options -----------------------------
O_COPTFLAGS	   = -O
O_FOPTFLAGS	   = -O
# ########################## C++ compiler ##################################
CXX_CC		   = ${WIN32FE} bcc32 -P -q --quiet -w-8019 -w-8060 -w-8057
CXX_FC		   = ${WIN32FE} bcf77 --quiet
CXX_CLINKER_SLFLAG = -L
CXX_FLINKER_SLFLAG = -L
CXX_CLINKER	   = ${WIN32FE} bcc32 -P  --quiet
CXX_FLINKER	   = ${WIN32FE} bcf77 --quiet
CXX_CCV		   = bcc32 -P | head -1
CXX_SYS_LIB	   = 
# ------------------------- BOPT - g_c++ options ------------------------------
GCXX_COPTFLAGS	   = -v
GCXX_FOPTFLAGS	   = 
# ------------------------- BOPT - O_c++ options ------------------------------
OCXX_COPTFLAGS	   = -O
OCXX_FOPTFLAGS	   = 
# -------------------------- BOPT - g_complex options ------------------------
GCOMP_COPTFLAGS	   = -v
GCOMP_FOPTFLAGS	   = 
# --------------------------- BOPT - O_complex options -------------------------
OCOMP_COPTFLAGS	   = -O
OCOMP_FOPTFLAGS	   = 

# ########################### PETSc install options ###########################
#
G_PETSCFLAGS	   = -DPETSC_USE_DEBUG  -DPETSC_USE_LOG -DPETSC_USE_BOPT_g -DPETSC_USE_STACK
O_PETSCFLAGS	   = -DINLINE_FOR -DPETSC_USE_DEBUG  -DPETSC_USE_BOPT_O -DPETSC_USE_LOG
GCXX_PETSCFLAGS	   = -DPETSC_USE_DEBUG  -DPETSC_USE_LOG -DPETSC_USE_BOPT_g -DPETSC_USE_STACK
OCXX_PETSCFLAGS	   = -DPETSC_USE_DEBUG  -DPETSC_USE_LOG -DPETSC_USE_BOPT_O
GCOMP_PETSCFLAGS   = -DPETSC_USE_DEBUG  -DPETSC_USE_LOG -DPETSC_USE_BOPT_g \
                     -DPETSC_USE_STACK -DPETSC_USE_COMPLEX -DPETSC_HAVE_TEMPLATED_COMPLEX
OCOMP_PETSCFLAGS   = -DPETSC_USE_DEBUG  -DPETSC_USE_LOG -DPETSC_USE_BOPT_O \
                     -DPETSC_USE_COMPLEX -DPETSC_HAVE_TEMPLATED_COMPLEX

##################################################################################
#
#   PETSc installers should very rarely ever need to edit anything below this 
#
##################################################################################

PARCH		   = win32_borland

include ${PETSC_DIR}/bmake/common_variables
