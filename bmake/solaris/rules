# $Id: base,v 1.29 1998/03/26 19:28:15 balay Exp balay $ 

PARCH    = solaris
#
#  If you are using gcc or an old version cc you may need to remove the
#  -dalign -xtarget=native from below.
#
CC       = cc -DPARCH_solaris -KPIC -dalign -xtarget=native
#
#  Indicates the version of the compiler you are using; if you do not know
#  how to get the version number then leave this blank.
#
CCV      = ${CC} -V -c
#
FC       = f77
AR       = ar
RM       = rm -f
OMAKE    = make
RANLIB   = true
SHELL    = /bin/sh
CLINKER  = cc ${COPTFLAGS} -R${LDIR}:${DYLIBPATH}
FLINKER  = f77 ${FOPTFLAGS} -R${LDIR}:${DYLIBPATH}

FCONF    = -DHAVE_FORTRAN_UNDERSCORE
CONF     = -DHAVE_STROPTS_H -DHAVE_SEARCH_H -DHAVE_PWD_H -DHAVE_STRING_H \
           -DHAVE_MALLOC_H -DHAVE_STDLIB_H -DHAVE_X11 -DHAVE_UNISTD_H -DHAVE_DRAND48 \
           -DHAVE_SYS_TIME_H -DHAVE_SYS_SYSTEMINFO_H -DHAVE_SYSINFO ${FCONF} \
	   -DHAVE_SUMNATH_H -DHAVE_RESTRICT -DHAVE_SUNMATHPRO

SYS_LIB  = -lnsl -lsocket -lgen

include ${PETSC_DIR}/bmake/common

libc: ${LIBNAME}(${OBJSC})
libf: ${LIBNAME}(${OBJSF})


#############

#.F.o: 
#	${FC} -c ${FFLAGS} ${CFLAGS} ${FOPTFLAGS} $*.F
#.F.a: 
#	${FC} -c ${FFLAGS} ${CFLAGS} ${FOPTFLAGS} $*.F
#	${AR} cr ${LIBNAME} $*.o
#	${RM} $*.o
.F.f:
	${RM} $*.f
	/usr/ucb/cc -E  ${CFLAGS} $*.F | grep -v '^# '  > $*.f

.F.o:
	${RM} $*.f
	/usr/ucb/cc -E  ${CFLAGS} $*.F | grep -v '^# '  > $*.f
	-${FC} -c ${FFLAGS} ${FOPTFLAGS} $*.f
	${RM} $*.f 

.F.a:
	${RM} $*.f 
	/usr/ucb/cc -E  ${CFLAGS} $*.F | grep -v '^# '  > $*.f
	-${FC} -c ${FFLAGS} ${FOPTFLAGS} $*.f
	${AR} cr ${LIBNAME} $*.o
	${RM} $*.f $*.o


shared: chkopts_basic
	-@echo making shared libraries in ${LDIR} ;\
	cd ${LDIR}; \
	${RM} -rf tmp; \
	mkdir tmp; \
	cd tmp; \
	for LIBNAME in ${SHLIBS} ; \
	do \
	  flag=""; \
	  if [ -f ${LDIR}/$$LIBNAME.${SLSUFFIX} ]; then \
              flag=`find ${LDIR} -type f -name $$LIBNAME.a -newer ${LDIR}/$$LIBNAME.${SLSUFFIX} -print`; \
	  else \
	      flag="true"; \
	  fi; \
          if [ "$$flag" != "" ]; then \
	    echo "building $$LIBNAME.${SLSUFFIX}"; \
	    ${AR} x ../$$LIBNAME.a ;\
	    ${LD} -G  -h $$LIBNAME.${SLSUFFIX} *.o  -o ../$$LIBNAME.${SLSUFFIX} ; \
	    ${RM} -f * ; \
	  fi; \
	done ;\
	cd ../ ; \
	${RM} -rf tmp
