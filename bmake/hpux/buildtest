#! /bin/csh
# $Id: buildtest,v 1.1 2000/02/20 20:48:44 bsmith Exp bsmith $ 
#
# Defines the configuration for maint/buildtest, this is sourced by that script
#
set TMP=/home/petsc/petsc
set MACH=snake
set ARCH=hpux
set TEST=testexamples_
set NICE=''
#
set day=`date | cut -f1 -d" "`
if ($day == Sun) then
  set BOPT=O
  set JOBS=(1 2 3 6)
else if ($day == Mon) then
  set BOPT=g
  set JOBS=(1 2 3 6)
else if ($day == Tue) then
  set BOPT=O        
  set JOBS=(1 2 3 6)
else if ($day == Wed) then
  set BOPT=g
  set JOBS=(1 2 3 6)
else if ($day == Thu) then
  set BOPT=O
  set JOBS=(1 2 3 6)
else if ($day == Fri) then
  set BOPT=g
  set JOBS=(1 2 3 6)
else if ($day == Sat) then
  set BOPT=O        
  set JOBS=(1 2 3 6)
endif






