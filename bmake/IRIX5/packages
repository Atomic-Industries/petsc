BLOCKSOLVE_INCLUDE    = -I/home/petsc/BlockSolve95/include
BLOCKSOLVE_LIB        = -L/home/petsc/BlockSolve95/lib/libO/${PETSC_ARCH} -lBS95
PETSC_HAVE_BLOCKSOLVE = -DPETSC_HAVE_BLOCKSOLVE
