# $Id: base,v 1.11 1998/04/09 20:54:13 balay Exp balay $ 

#
#   The PARCH flag below is the same for the Cray T3D and T3E, so DO NOT change
#  the t3d below to t3e.
#
PARCH    = t3d
CC       = cc -DPARCH_t3d
#
#  Indicates the version of the compiler you are using; if you do not know
#  how to get the version number then use: unknown
#
CCV      = ${CC} -V
#
FC       = f90 -dp
AR       = ar
RM       = rm
RANLIB   = true
OMAKE    = make
SHELL    = /bin/sh
CLINKER  = ${CC} ${COPTFLAGS}
FLINKER  = ${FC} ${FOPTFLAGS}
SYS_LIB  =

CPPFLAGS = ${PETSC_INCLUDE} -DPARCH_t3d

FCONF    = -DHAVE_64BITS 

SHELL   = /bin/sh

include ${PETSC_DIR}/bmake/common

libc:
	for i in ${OBJSC}; do ${OMAKE} BOPT=${BOPT} libmember LIBMEMBER=$$i ; done

libf:
	for i in ${OBJSF}; do ${OMAKE} BOPT=${BOPT} libmember LIBMEMBER=$$i ; done

libmember:    ${LIBNAME}(${LIBMEMBER})
	@-true

#########

# This F.f rule ensures that the old *.f files are removed.
#

.F.f:
	-${RM} $*.f
	-cpp  -DPARCH_t3d ${CFLAGS} -P $*.F $*.f

.F.o:
	-cpp  -DPARCH_t3d ${CFLAGS} -P $*.F $*.f
	-${FC} -c ${FFLAGS} ${FOPTFLAGS} $*.f
	-${RM} $*.f 

#.F.o:
#	${FC} -c -DPARCH_t3d ${CFLAGS} ${FFLAGS} ${FOPTFLAGS} $*.F

.F.a: 
	cpp  -DPARCH_t3d ${CFLAGS} -P $*.F $*.f
	${FC} -c ${FFLAGS} ${FOPTFLAGS} $*.f
	${AR} cr ${LIBNAME} $*.o
	${RM} -f $*.o $*.f

shared:
