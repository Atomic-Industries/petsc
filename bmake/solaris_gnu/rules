		   -Wl,-R,${LDIR}:${DYLIBPATH}
C_FLINKER        = /home/alice/software/egcs/solaris/bin/g77 ${FOPTFLAGS} \
		   -Wl,-R,${LDIR}:${DYLIBPATH}
C_CCV            = ${C_CC} --version
C_SYS_LIB        = -L/opt/SUNWspro/SC4.2/lib -lF77 -lM77 -lsunmath -lnsl -lsocket -lgen -ldl 
# ---------------------------- BOPT=g options ----------------------------
G_COPTFLAGS      = -g  -Wshadow  -fomit-frame-pointer
