#! /bin/csh
# 
#  Makes distribution version of Petsc 2.0
#
echo "Have you rebuilt: manpages, wwwpages, latexpages,"
echo "by running make allmanpages"
echo "and the users manual (and intro) in .ps and .html?"
echo "Set the version number and release date in petsc.h?"
#
cd /home/bsmith/petsc
make ACTION=clean tree
#
/bin/rm -f ~/petsc.tar
#
cd /home/bsmith
tar cFFXf /home/bsmith/petsc/maint/xclude ~/petsc.tar petsc
#
cd /mcs/tmp
tar xf ~/petsc.tar
chmod -R u+w petsc
/bin/rm -f ~/petsc.tar
tar cf ~/petsc.tar petsc
/bin/rm -r -f /mcs/tmp/petsc

