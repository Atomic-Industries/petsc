#! /bin/csh
# 
#  Makes a complete backup of PETSc src incase the PETSc disk is lost
#
#
cd /home/bsmith/petsc
#make ACTION=clean tree
cd /home/bsmith/petsc/docs/tex
#make clean
#
#
set name=`date +%y%m%d`
cd /home/bsmith
tar cFFXf /home/bsmith/petsc/maint/xcludebackup /ccsthome/petsc/userbackups/petsc_$name.tar petsc >& /ccsthome/petsc/userbackups/petsc_$name.out 
cd /ccsthome/petsc/userbackups
gzip petsc_$name.tar
cp petsc_$name.tar.gz /hsm/mcs/petsc/userbackups

#

