#!/usr/local/bin/expect -f
# $Id: autoscp,v 1.2 2000/06/30 18:53:31 balay Exp balay $ 

#
# automatically copy files to a specified site using scp
  set sourcefile [lindex $argv 0]
  set destfile   [lindex $argv 1]

  spawn scp $sourcefile $destfile
  expect {*assword*}
  set timeout 3000
  send "G88s43pe\r"
  expect {*100%*}
  wait # wait until the spawned process exits.

